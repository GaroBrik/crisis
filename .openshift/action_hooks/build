#!/bin/bash

cp -r "${OPENSHIFT_REPO_DIR}webcontent/css" "${OPENSHIFT_REPO_DIR}static/"
pushd "${OPENSHIFT_REPO_DIR}webcontent/js" > /dev/null
{
    echo "-----> compiling js"
    output="${OPENSHIFT_REPO_DIR}static/compiled.js" 
    input="goog.js main.js division.js map.js"
    externs="jsonexterns.js jquery-1.9.js"
    java -jar compiler.jar --compilation_level ADVANCED_OPTIMIZATIONS \
        --js $input --externs $externs --js_output_file $output --generate_exports
} >> "${OPENSHIFT_GO_LOG_DIR}go.log"
